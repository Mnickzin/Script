local player = game.Players.LocalPlayer
local character = player.Character


function fly()
    character.Humanoid.Fly 
function stopFlying()
    character.Humanoid.Fly = false
end


function speedBoost()
    character.Humanoid.WalkSpeed = character.Humanoid.WalkSpeed * 2
end

-- Função 
function normalSpeed()
    character.Humanoid.WalkSpeed = 16 -- Velocidade padrão
end


